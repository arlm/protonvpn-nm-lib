pkgname=python-protonvpn-nm-lib
pkgver=3.12.0
pkgrel=1
pkgdesc="Official Proton VPN NetworkManager library."
arch=("noarch")
url="https://github.com/ProtonVPN"
license=("GPL3")
groups=("ProtonVPN")
depends=("python-proton-client" "networkmanager" "networkmanager-openvpn" "openvpn" "libnm" "dbus" "dbus-openrc" "libsecret" "py3-xdg" "py3-keyring" "py3-jinja2" "py3-distro" "py3-dbus" "xdg-utils" "py3-gobject3")
makedepends=("py3-setuptools")
conflicts=("protonvpn-cli<3.11.0" "protonvpn-cli<1.9.0")
source=("$pkgname.tar.gz")
sha256sums=(.)
validpgpkeys=("A884 41BD 4864 F95B EE08  E63A 71EB 4740 1994 0E11")

build() {
    cd "$pkgname"
    python setup.py build
}

package() {
    cd "$pkgname"
    python setup.py install --root="$pkgdir" --optimize=1
}
